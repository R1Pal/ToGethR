

<div class="container">
  <div class="row justify-content-center">

    <div class="dropdown">
      <div class="my-pending-tasks dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        <p class="m-0 p-3">My pending tasks</p>
        </div>
          <div class="dropdown-menu w-100 p-0 border-0">
            <% @my_pending_tasks.each do |pending_task| %>
              <div class="border d-flex justify-content-between align-items-center p-3 dropdown-item">
                <span><%= cl_image_tag pending_task.user.photo.key, height: 50, width: 50, crop: :fill, class:"rounded-circle" %></span>
                <span><%= pending_task.title %></span>
                <span><%= pending_task.date.strftime('%b %d, %Y') %></span>
                <i class="fa-solid fa-circle-dot"></i>
              </div>
           <% end %>
          </div>
      </div>

    <div data-controller="task-container" class="task-container">
      <div class="d-flex justify-content-between align-items-center">
        <span><strong>Filters</strong></span>
        <div class="dropdown">
          <a class="border shadow-sm btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Assigned to</a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#"><%= current_user.nickname %></a></li>
            <li><a class="dropdown-item" href="#"><%= @partner.nickname %></a></li>
            <li><a class="dropdown-item" href="#">Nobobdy</a></li>
          </ul>
        </div>
        <div class="dropdown">
          <a class="border shadow-sm btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Status</a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#" data-action="click->task-container#reveal">Pending</a></li>
            <li><a class="dropdown-item" href="#">Done</a></li>
          </ul>
        </div>
        <a href=# class="btn btn-primary">Today</a>
      </div>

      <div>
        <span>Today</span>
      </div>
      <div>
        <span>This week</span>
      </div>
      <div>
        <span>Earlier</span>
        <%= form_with url: couple_render_filtered_path, method: :get, html: {class:
        "mb-4", data: {data_container_target: "form"}} do |f| %>
          <%= f.text_field :query, class: "form-control", placeholder:
                     "Please enter a date", value: params[:query],
                     data: {
                        data_container_target: "input",
                        action: "submit->data-container#reveal"
                      } %>
      </div>
      <div>
        <span>Later</span>
      </div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
    <%= link_to  %>
    </div>
  </div>
</div>
