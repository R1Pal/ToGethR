<div data-task-container-target="content" class="my-4">

      <div class="my-tasks bg_light_white text-dark" data-bs-toggle="collapse" data-bs-target="#collapseTodayTasks" aria-expanded="false" aria-controls="collapseTodayTasks">
        <p class="m-0 p-3">Today</p>
      </div>

        <div class="w-100 p-0 border-0 collapse" id="collapseTodayTasks">
          <% unless tasks.empty? %>
            <% tasks.each do |task| %>
              <% if task.date == Date.today %>
                <%= link_to task_path(task), class:"text-decoration-none text-dark" do %>
                  <div class="border d-flex bg_light_white justify-content-between align-items-center p-3">
                    <span><%= task.title %></span>
                    <span><%= task.date.strftime('%b %d, %Y') %></span>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>

      <div class="my-tasks bg_light_white text-dark mt-4" data-bs-toggle="collapse" data-bs-target="#collapseWeekTasks" aria-expanded="false" aria-controls="collapseWeekTasks">
        <p class="m-0 p-3">This week</p>
      </div>

        <div class="w-100 p-0 border-0 collapse" id="collapseWeekTasks">
          <% unless tasks.empty? %>
            <% tasks.sort_by{ |item| item.date }.each do |task| %>
              <% if Date.today.all_week.to_a.include?(task.date) %>
                <%= link_to task_path(task), class:"text-decoration-none text-dark" do %>
                  <div class="border d-flex bg_light_white justify-content-between align-items-center p-3">
                    <span><%= task.title %></span>
                    <span><%= task.date.strftime('%b %d, %Y') %></span>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>


     <div class="my-tasks mt-4 bg_light_white text-dark" data-bs-toggle="collapse" data-bs-target="#collapseEarlierTasks" aria-expanded="false" aria-controls="collapseEarlierTasks">
        <p class="m-0 p-3">Earlier</p>
      </div>

        <div class="w-100 p-0 border-0 collapse" id="collapseEarlierTasks">
          <% unless tasks.empty? %>
            <% tasks.sort_by{ |item| item.date }.each do |task| %>
              <% if task.date < Date.today.at_beginning_of_week %>
                <%= link_to task_path(task), class:"text-decoration-none text-dark" do %>
                  <div class="border d-flex bg_light_white justify-content-between align-items-center p-3">
                    <span><%= task.title %></span>
                    <span><%= task.date.strftime('%b %d, %Y') %></span>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>

      <div class="my-tasks my-4 bg_light_white text-dark" data-bs-toggle="collapse" data-bs-target="#collapseLaterTasks" aria-expanded="false" aria-controls="collapseLaterTasks">
        <p class="m-0 p-3">Later</p>
      </div>

        <div class="w-100 p-0 border-0 collapse" id="collapseLaterTasks">
          <% unless tasks.empty? %>
            <% tasks.sort_by{ |item| item.date }.each do |task| %>
              <% if task.date > Date.today.at_end_of_week %>
                <%= link_to task_path(task), class:"text-decoration-none text-dark" do %>
                  <div class="border d-flex bg_light_white justify-content-between align-items-center p-3">
                    <span><%= task.title %></span>
                    <span><%= task.date.strftime('%b %d, %Y') %></span>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>

</div>
