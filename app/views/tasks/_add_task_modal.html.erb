<div class="modal fade" id="addTaskModal" tabindex="-1" aria-labelledby="addTaskModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5 color-blue" id="addTaskModalLabel">Add a new task</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [couple, task] do |f| %>
          <%= f.input :title, label: false, placeholder: "Title" %>
          <%= f.input :description, label: false, placeholder: "Description" %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.input :date, label: false, placeholder: "Date" %>
          <%= f.input :base_score, placeholder: "Base score" %>
          <%= f.input :statue, label: false, placeholder: "Statue" %>
          <%= f.input :assigned_to, label: false, placeholder: "Assigned to" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
