<div class="reward-card">
  <strong>Title:</strong> <%= @reward.title %><br>
  <strong>Description:</strong> <%= @reward.description %><br>
  <strong>Enforcement:</strong> <%= @reward.date %><br>
  <strong>Status:</strong> <%= @reward.status %> <br>
  <strong>Cost:</strong> <%= @reward.cost %> points<br>

  <% if @reward.status == 'pending' %>
    <%= link_to 'Mark as Done', mark_as_done_couple_reward_path(current_user.couple, @reward), data: { turbo_method: :patch } %>
  <% end %>
</div>
