      Chouchou
      <div class="score-p1">120 pts</div>
    </div>
    <div class="vs poppins-20 fw-bold">vs</div>
    <div class="Player2 d-flex flex-column justify-content-center align-items-center poppins-20 fw-bold">
      <div class="player2-pp d-flex flex-column justify-content-center align-items-center"><%= image_tag('avatar_0.png') %></div>
      Loulou
      <div class="score-p2">300 pts</div>
    </div>
  </div>
</div>
